.image-box {
    position: relative;
}

.image-box image {
    max-width: 100%;
    width: 100%;
    height: 100%;
}

.image-box .loading {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

.image-box .loading-icon {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    top: 50%;
    left: 50%;
    margin-top: -20rpx;
    margin-left: -20rpx;
}